{
  "include": ["**/*.ts", "**/*.tsx" ],
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "incremental": true,
    "outDir": "lib",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}